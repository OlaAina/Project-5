<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.project5">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project5">
        <activity android:name=".MainMenuActivity" android:label="@string/title_activity_main_menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/order_donut" android:name=".DonutActivity" android:parentActivityName=".MainMenuActivity" ></activity>
        <activity android:label="@string/order_coffee" android:name=".CoffeeActivity" android:parentActivityName=".MainMenuActivity"></activity>
        <activity android:label="@string/store_orders" android:name=".StoreOrdersActivity" android:parentActivityName=".MainMenuActivity"></activity>
        <activity android:label="@string/order_details" android:name=".OrderDetailActivity" android:parentActivityName=".MainMenuActivity"></activity>
    </application>

</manifest>